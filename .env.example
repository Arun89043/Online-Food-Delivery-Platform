# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-strong-random-key
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# For local development, use SQLite (default)
# For production on Render, use PostgreSQL with connection string below
DATABASE_URL=postgresql://user:password@hostname:5432/database_name

# CORS Settings
